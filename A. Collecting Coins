#include<bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while (t--)
    {
        int a, b, c, n;
        cin>>a>>b>>c>>n;
        int maxi=max(a,max(b,c));
        n-=(maxi-a);
        n-=(maxi-b);
        n-=(maxi-c);
        if(n>=0&&n%3==0)cout<<"YES"<<endl;
        else cout<<"NO"<<endl;


    }
    
    
    return 0;
}
