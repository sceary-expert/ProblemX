class Solution {
public:
  
    long long zeroFilledSubarray(vector<int>& nums) {
        int i = 0, j = 0, n = nums.size();
            long long int ans = 0;
            for( i = 0; i< n; i++ )
            {
                    j = i;//2
                    if(nums[i] == 0)//2
                    {
                            
                            
                            while(j < n && nums[j] == 0)//2 < 8 && nums[2] == 0
                            {
                                    
                                    j++;//4
                            }
                            long long int k = j - i;
                            ans += k*(k + 1) / 2;                     
                                    
                                    
                            i = j;
                    }
                    
                    
            }
            return ans;
    }
};
